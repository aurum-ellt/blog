<% if notice.present? %>
  <button type="button" id="notice" class="absolute top-24 left-0 right-0 mx-auto w-64 py-2 px-4 bg-green-500 rounded-full text-sm text-white font-medium transition transform duration-1000"
    data-controller="flash" data-action="click->flash#hide"
    data-transition-enter-from="opacity-0 -translate-y-6"
    data-transition-enter-to="opacity-100 translate-y-0"
    data-transition-leave-from="opacity-100 translate-y-0"
    data-transition-leave-to="opacity-0 -translate-y-6">
    <%= notice %>
  </button>
<% end %>
