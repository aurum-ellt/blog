<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Drafts</h1>
    <%= link_to "New post", new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="posts" class="min-w-full">
    <% @posts.each do |post| %>
      <%= render partial: "posts/post", locals: { post: } %>
      <p>
        <%= link_to "Show this post", author_post_path(post.user.slug, post.slug), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
