<%= form_with(model: post, class: "contents") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-12">
    <%= form.text_field :title, autofocus: true, class: "form-control form-control-lg font-bold text-center", placeholder: "e.g. Hello world!" %>
  </div>

  <div class="my-12">
    <%= form.rich_textarea :body , class: "form-control min-h-40", data: { controller: "trix", trix_unused_components_value: [".trix-button--icon-heading-1", ".trix-button-group--file-tools", ".trix-button-group--history-tools"] }, placeholder: "..." %>
  </div>

  <div class="text-center">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
